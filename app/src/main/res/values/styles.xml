        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/rounded_button_white</item>
    </style>

    <style name="seekBarStyle" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="ToggleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/toggle_switch_bg</item>
        <item name="android:thumb">@android:color/transparent</item>
        <item name="android:track">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
